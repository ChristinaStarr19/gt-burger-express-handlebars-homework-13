
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-newDevour="{{devoured}}">
		{{#if devoured}}Devoured!{{else}}Devour{{/if}}
	</button>

</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-burger">

  <div class="form-group">
    <label for="nb">Burger Name:</label>
    <input type="text" id="nb" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>